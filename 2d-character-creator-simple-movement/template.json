    },
    {
      "area": "movement-system",
      "files": ["Scripts/Player.gd"],
      "description": "Movement speed, animation timing, input handling",
      "priority": "medium"
    },
    {
      "area": "game-world",
      "files": ["Scenes/Main.tscn", "Scripts/Main.gd"],
      "description": "World layout, boundaries, camera zoom, environment",
      "priority": "medium"
    },
    {
      "area": "sprite-assets",
      "files": ["Assets/body/", "Assets/hair/", "Assets/outfit/", "Assets/accessories/"],
      "description": "Replace or add new sprite sheets (512x512, 8x8 grid)",
      "priority": "low"
    }
